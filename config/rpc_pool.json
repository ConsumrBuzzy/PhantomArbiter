{
    "settings": {
        "max_retries": 3,
        "timeout_seconds": 10,
        "cooldown_on_failure_seconds": 120
    },
    "endpoints": [
        {
            "name": "Helius",
            "url": "https://mainnet.helius-rpc.com/?api-key=${HELIUS_API_KEY}",
            "priority": 1,
            "enabled": true,
            "note": "Requires HELIUS_API_KEY in .env - free tier available at helius.dev"
        },
        {
            "name": "JITO Private",
            "url": "https://mainnet.block-engine.jito.wtf/api/v1/transactions",
            "priority": 0,
            "enabled": true,
            "execution_only": true,
            "note": "V12.3: JITO public block engine for front-running protection. No API key required."
        },
        {
            "name": "JITO NY",
            "url": "https://ny.mainnet.block-engine.jito.wtf/api/v1/transactions",
            "priority": 1,
            "enabled": true,
            "execution_only": true,
            "note": "Minimizes latency for East Coast / NY region"
        },
        {
            "name": "JITO Frankfurt",
            "url": "https://frankfurt.mainnet.block-engine.jito.wtf/api/v1/transactions",
            "priority": 1,
            "enabled": true,
            "execution_only": true,
            "note": "Minimizes latency for Europe/EMEA region"
        },
        {
            "name": "JITO Tokyo",
            "url": "https://tokyo.mainnet.block-engine.jito.wtf/api/v1/transactions",
            "priority": 1,
            "enabled": true,
            "execution_only": true,
            "note": "Minimizes latency for Asia-Pacific region"
        },
        {
            "name": "NOWNodes",
            "url": "${NOWNODES_RPC_URL}",
            "priority": 2,
            "enabled": false,
            "note": "Unmetered RPS for heavy queries."
        },
        {
            "name": "Ankr",
            "url": "${ANKR_ENDPOINT}",
            "priority": 2,
            "enabled": false,
            "note": "Decentralized Failover."
        },
        {
            "name": "Lava",
            "url": "${LAVA_ENDPOINT}",
            "priority": 2,
            "enabled": false,
            "note": "Privacy & Aggregation."
        },
        {
            "name": "Chainstack",
            "url": "${CHAINSTACK_RPC_URL}",
            "priority": 2,
            "enabled": false,
            "note": "Fast node recovery."
        },
        {
            "name": "Solana Mainnet",
            "url": "https://api.mainnet-beta.solana.com",
            "priority": 99,
            "enabled": false,
            "note": "V11.9: Disabled - public endpoint is unreliable/rate-limited"
        }
    ]
}